<div id="info">
  <div class="container">
    <div class="row">
      <div class="col-md-4 user-info center">
        <h3><%= @customer.name %></h3>
        <p><%= @customer.email %></p>

        <% if @customer.address_line_1.present? %>

          <div class="address-block">
            <h5 class="soft-top-20">Address</h5>
            <% @customer.address_fields.each do |field| %>
              <span class="address-line"><%= @customer[field] %></span>
            <% end %>
          </div>

        <% end %>

        <%= @customer.user.email %>
        <div class="btn-group">
        <%= link_to 'Assign Customer to Me', customer_assign_customer_path(@customer, current_user), class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_customer_path(@customer), class: 'btn btn-default' %>
        </div>
      </div>

      <div class="col-md-8">
        <h3 class="center">Messages</h3>

        <% if @customer.chat.messages.any? %>
        <% else %>
          <p class="center">This customer has not sent any messages yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
