<header class="<%= header_class %>" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" data-target=".bs-navbar-collapse" data-toggle="collapse" type="button">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Wave SMS', root_path, class: 'navbar-brand' %>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to 'Create Number', '#' %></li>
          <li><%= link_to 'My Numbers', '#' %></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-user"></i>
              <%= current_user.email %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path do %>
                  <span class="octicon octicon-cloud-upload fa-fw"></span>
                  My Account
                <% end %>
              </li>
              <hr/>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>
                  Sign out
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Pricing', pricing_path %></li>
          <li><%= link_to 'Features', '#' %></li>
          <li><%= link_to 'Register', new_user_registration_path %></li>
          <li><%= link_to 'Sign in', new_user_session_path, class: 'button' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
