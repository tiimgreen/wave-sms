<header class="<%= header_class %>" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" data-target=".bs-navbar-collapse" data-toggle="collapse" type="button">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% if on_organisation_branding_page? %>
        <%= link_to @org.name, root_path, class: 'navbar-brand' %>
      <% else %>
        <%= link_to 'Wave SMS', root_path, class: 'navbar-brand' %>
      <% end %>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to 'Customers', customers_path %></li>
          <li><%= link_to 'Staff', staff_index_path %></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-user"></i>
              <%= current_user.display_details %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-cog fa-fw"></i>
                  My Account
                <% end %>
              </li>
              <% if current_user.organisation.owner == current_user %>
                <li>
                  <%= link_to edit_organisation_path do %>
                    <i class="fa fa-pencil fa-fw"></i>
                    Organisation Settings
                  <% end %>
                </li>
              <% end %>
              <hr/>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>
                  Sign out
                <% end %>
              </li>
            </ul>
          </li>
        <% elsif on_organisation_branding_page? %>
          <p class="navbar-text navbar-right">Create your account now on our secure platform to enable easy ordering in the future.</p>
        <% else %>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Pricing', pricing_path %></li>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
          <li><%= link_to 'Get Access', new_user_registration_path, class: 'button' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
