<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> alert-dissmissable" role="alert">
    <button class="close" data-dismiss="alert" type="button">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= value.html_safe %>
  </div>
<% end %>
